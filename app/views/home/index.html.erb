<h2> Curiosities </h2>
<section id="curiosities">
    <div class="container">
        <% @my_curiosities.each_with_index do |curiosity, index| %>
            <% if index == 0 || index == 4 %>
                <div class="row">
                    
            <% end %>
                <div class="col-sm-3">
                    <div class="item">
                        <a href="<%= curiosity.image_url %>" target="_blank">
                            <img class="picture" title="<%= curiosity.image_url %>"></img>
                        </a>
                    </div>
                    <h3><%= curiosity.name %></h3>
                    <p><%= curiosity.description %></p>
                    <p>
                        <%= link_to 'Voir les détails', curiosity_path(curiosity) %>
                    </p>
                    <p>
                        <%= link_to 'Supprimer', curiosity_path(curiosity), method: :delete, data: { confirm: 'Êtes-vous vraiment sûre de vouloir supprimer cette curiosité' } %>
                    </p>
                </div>
            <% if index ==3 || index == 7 %>
                </div>
            <% end %>
        <% end %>
    </div>
</section>
